(library
 (name MEML_lib)
 (public_name MEML.Lib)
 (modules
  Ast
  Parser
  Inferencer
  Ty
  Closure
  PprinterAST
  Cast
  PprinterCAST
  Lambdalift
  Llast
  PprinterLLAST
  Codegen)
 (libraries base angstrom llvm llvm.analysis)
 (preprocess
  (pps ppx_expect ppx_deriving.show ppx_deriving.eq))
 (instrumentation
  (backend bisect_ppx))
 (inline_tests))

(rule
 (targets runtime.so)
 (deps runtime.c)
 (action
  (run gcc -fPIC -shared %{deps} -o %{targets})))
